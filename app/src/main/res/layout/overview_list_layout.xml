<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/customborder"
    android:paddingLeft="5sp"
    android:paddingRight="5sp"
    android:paddingBottom="5sp"
    android:paddingTop="5sp"
    android:layout_marginBottom="20sp"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/list_layout_static"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/txt_Bezeichnung"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:lines="1"

                android:text="Michael Jacksons Play"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txt_Lagerort"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.35"
                android:lines="1"
                android:paddingLeft="5sp"
                android:paddingRight="5sp"
                android:textColor="#000000"
                android:textSize="16sp"
                tools:text="asdfasdfasdfasdfasdfaasdfasdfasdfsdf" />

            <TextView
                android:id="@+id/txt_Menge"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.15"
                android:lines="1"
                android:text="3"
                android:textAlignment="textEnd"
                android:textColor="#000000"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_EAN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="7919239494"
                android:textColor="#D3000000"
                android:textStyle="italic"
                android:textSize="13sp" />

        </LinearLayout>


    </LinearLayout>




</LinearLayout>


